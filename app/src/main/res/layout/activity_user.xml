<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.usermessage.UserActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#39bafc">

        <Button
            android:id="@+id/mb_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#39bafc"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#fff"
            android:textSize="25dp" />
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/user_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp" />

    <com.example.lwxg.changweistory.module.usermessage.view.MyTableLayout
        android:id="@+id/user_table"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom">

    </com.example.lwxg.changweistory.module.usermessage.view.MyTableLayout>

</FrameLayout>