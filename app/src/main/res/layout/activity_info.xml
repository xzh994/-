<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InfoActivity">

    <Button
        android:id="@+id/info_back"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/yuanjiao_blue_15dp"
        android:text="返回"
        android:textColor="#fff" />

    <ListView
        android:id="@+id/info_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_yinying"
        android:gravity="bottom">

        <EditText
            android:id="@+id/reply_list_foot_content"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/reply_list_foot_ok"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/yuanjiao_blue_15dp"
            android:text="确定"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>